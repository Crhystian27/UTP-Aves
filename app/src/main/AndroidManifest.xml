<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.utp.aves">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BirdApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_utp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_utp"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTPAves"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning,LockedOrientationActivity"
        tools:targetApi="31">
        <activity
            android:name=".RootActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BirdActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>