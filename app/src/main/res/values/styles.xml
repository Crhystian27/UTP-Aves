<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_utp</item>
        <item name="postSplashScreenTheme">@style/Theme.UTPAves</item>
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
    </style>



    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.BirdCornerCut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="textInput_search">
        <item name="android:focusableInTouchMode">true</item>
        <item name="boxStrokeColor">@color/search_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">@null</item>
    </style>

    <style name="textInputEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="textInputEditText_search" parent="textInputEditText">
        <item name="android:padding">0dp</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="backgroundTint">@color/white</item>
    </style>


</resources>